<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          styleClass="app"
          vgap="10"
          hgap="10"
          fx:controller="meltem.controllers.UserEditController"
          alignment="CENTER"
          prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="15" style="-fx-background-radius: 5; -fx-background-color: white">
        <padding>
            <Insets top="25" bottom="25" left="15" right="15"/>
        </padding>
        <HBox GridPane.rowIndex="1"
              alignment="CENTER"
              spacing="75"
        >
            <Text styleClass="body2">Kullanici ID'si</Text>
            <TextField fx:id="txtUserId"></TextField>
        </HBox>
        <HBox
                GridPane.rowIndex="4"
                alignment="CENTER"
                spacing="75"
        >
            <Text styleClass="body2">Kullanici Adi</Text>
            <TextField fx:id="txtUserName"></TextField>
        </HBox>
        <HBox
                alignment="CENTER"
                spacing="75"
                GridPane.rowIndex="7"
        >
            <Text styleClass="body2">Kullanici Sifresi</Text>
            <TextField fx:id="txtPw"></TextField>
        </HBox>
        <HBox
                alignment="CENTER"
                spacing="75"
                GridPane.rowIndex="10"
        >
            <Text styleClass="body2">Kullanici Tipi</Text>
            <TextField fx:id="txtUserAuth"></TextField>
        </HBox>
    </VBox>
    <FlowPane alignment="CENTER" hgap="25" GridPane.rowIndex="15">
        <Button onAction="#goBack">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true" fitHeight="35" fitWidth="35">
                    <image>
                        <Image url="@../icons/arrow_left.png" />
                    </image>
                </ImageView>
            </graphic>
            Geri Don
        </Button>
        <Button onAction="#goBack">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true" fitHeight="35" fitWidth="35">
                    <image>
                        <Image url="@../icons/edit.png" />
                    </image>
                </ImageView>
            </graphic>
            Ogrenciyi Guncelle
        </Button>
        <Button fx:id="btnEdit">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true" fitHeight="35" fitWidth="35">
                    <image>
                        <Image url="@../icons/delete.png" />
                    </image>
                </ImageView>
            </graphic>
            Ogrenciyi Sil
        </Button>
    </FlowPane>
</GridPane>

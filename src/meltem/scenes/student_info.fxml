<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="10" prefHeight="400.0" prefWidth="800.0" styleClass="app" vgap="12" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="meltem.controllers.StudentInfoController">
    <HBox alignment="CENTER" spacing="75">
        <Text styleClass="header1" style="-fx-font-size: 24">Ogrenci Bilgileri</Text>
    </HBox>
    <VBox alignment="CENTER" spacing="10" style="-fx-background-radius: 5; -fx-background-color: white" GridPane.rowIndex="2">
        <padding>
            <Insets bottom="25" left="15" right="15" top="25" />
        </padding>

        <BorderPane maxHeight="20.0" maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="100.0">
            <left>
                <Text text="Ogrenci Adi" BorderPane.alignment="CENTER" />
            </left>
            <right>
                <Text fx:id="txtStudentName" styleClass="body2" BorderPane.alignment="CENTER">Veli Telefon Numarasi</Text>
            </right>
        </BorderPane>
        <BorderPane maxHeight="20.0" maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="100.0">
            <left>
                <Text text="Ogrenci Soyadi" BorderPane.alignment="CENTER" />
            </left>
            <right>
                <Text fx:id="txtStudentLastName" styleClass="body2" BorderPane.alignment="CENTER">Veli Telefon Numarasi</Text>
            </right>
        </BorderPane>
        <BorderPane maxHeight="20.0" maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="100.0">
            <left>
                <Text text="Oryantasyon Baslangic Tarihi" BorderPane.alignment="CENTER" />
            </left>
            <right>
                <Text fx:id="txtOrientationStart" styleClass="body2" BorderPane.alignment="CENTER">Veli Telefon Numarasi</Text>
            </right>
        </BorderPane>
        <BorderPane maxHeight="20.0" maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="100.0">
            <left>
                <Text text="Oryantasyon Bitis Tarihi" BorderPane.alignment="CENTER" />
            </left>
            <right>
                <Text fx:id="txtOrientationEnd" styleClass="body2" BorderPane.alignment="CENTER">Veli Telefon Numarasi</Text>
            </right>
        </BorderPane>
    </VBox>
    <HBox alignment="CENTER" spacing="15" GridPane.rowIndex="5">
        <Button onAction="#goBack">
            <graphic>
                <ImageView fitHeight="35" fitWidth="35" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../icons/arrow_left.png" />
                    </image>
                </ImageView>
            </graphic>
            Geri Don
        </Button>
        <Button onAction="#goUpdate">
            <graphic>
                <ImageView fitHeight="35" fitWidth="35" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../icons/edit.png" />
                    </image>
                </ImageView>
            </graphic>
            Ogrenciyi Guncelle
        </Button>
        <Button fx:id="btnEdit" onAction="#goDelete">
            <graphic>
                <ImageView fitHeight="35" fitWidth="35" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../icons/delete.png" />
                    </image>
                </ImageView>
            </graphic>
            Ogrenciyi Sil
        </Button>
    </HBox>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>

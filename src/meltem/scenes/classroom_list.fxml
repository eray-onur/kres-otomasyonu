<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="667.0" prefWidth="463.0" spacing="60.0" styleClass="app" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="meltem.controllers.ClassroomsController">
    <Text style="-fx-font-size: 24px;" styleClass="header1" text="Sınıf Listesi" textAlignment="CENTER">Sınıf Listesi</Text>
   <HBox prefHeight="400.0" prefWidth="200.0">
      <children>

          <TableView fx:id="table" onMousePressed="#clickItem" prefHeight="400.0" prefWidth="400.0">

    </TableView>
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" spacing="25.0">
            <children>
                 <Button onAction="#goBack">
                     <graphic>
                         <ImageView fitHeight="35" fitWidth="35" pickOnBounds="true" preserveRatio="true">
                             <image>
                                 <Image url="@../icons/arrow_left.png" />
                             </image>
                         </ImageView>
                     </graphic>
                  <font>
                     <Font size="10.0" />
                  </font>
                     Geri Dön
                 </Button>
                 <Button onAction="#addTeacher">
                     <graphic>
                         <ImageView fitHeight="35" fitWidth="35" pickOnBounds="true" preserveRatio="true">
                             <image>
                                 <Image url="@../icons/teacher.png" />
                             </image>
                         </ImageView>
                     </graphic>
                  <font>
                     <Font size="10.0" />
                  </font>
                     Sınıf'a Öğretmen Atama
                 </Button>
                 <Button onAction="#addTeacher">
                     <graphic>
                         <ImageView fitHeight="35" fitWidth="35" pickOnBounds="true" preserveRatio="true">
                             <image>
                                 <Image url="@../icons/add.png" />
                             </image>
                         </ImageView>
                     </graphic>
                  <font>
                     <Font size="10.0" />
                  </font>
                     Yeni Sınıf Ekle
                 </Button>
                 <Button fx:id="btnEdit" onAction="#proceedToEdit">
                     <graphic>
                         <ImageView fitHeight="35" fitWidth="35" pickOnBounds="true" preserveRatio="true">
                             <image>
                                 <Image url="@../icons/edit.png" />
                             </image>
                         </ImageView>
                     </graphic>
                  <font>
                     <Font size="10.0" />
                  </font>
                     Seçilen Sınıfın Bilgileri
                 </Button>
            </children>
            <HBox.margin>
               <Insets />
            </HBox.margin>
            <padding>
               <Insets left="10.0" right="10.0" />
            </padding>
         </VBox>
      </children>
   </HBox>

    <VBox alignment="CENTER" spacing="15">
        <HBox alignment="CENTER" spacing="10.0">
            <TextField fx:id="txtClassroomId" prefHeight="46" prefWidth="310.0" />
            <Button fx:id="btnAdd" onAction="#findUser" prefWidth="125.0">
                <graphic>
                    <ImageView fitHeight="35" fitWidth="35" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../icons/search.png" />
                        </image>
                    </ImageView>
                </graphic>
                Sınıf Ara
            </Button>
        </HBox>
    </VBox>
</VBox>

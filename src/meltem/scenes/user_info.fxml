<GridPane alignment="CENTER" hgap="1.0" prefHeight="400.0" prefWidth="600.0" styleClass="app" vgap="5.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="meltem.controllers.UserInfoController">
    <ImageView fx:id="imageView" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" GridPane.rowIndex="6">
        <image>
            <Image backgroundLoading="true" url="@../icons/user.png" />
        </image>
    </ImageView>
    <VBox alignment="CENTER" style="-fx-background-color: white; -fx-border-radius: 5px;" GridPane.rowIndex="10">
        <padding>
            <Insets left="25.0" right="25.0" />
        </padding>
        <BorderPane maxHeight="-Infinity" maxWidth="1.7976931348623157E308" prefHeight="50.0" GridPane.vgrow="ALWAYS">
            <left>
                <Text styleClass="body2" BorderPane.alignment="CENTER">Kullanici Numarasi</Text>
            </left>
            <right>
                <Text fx:id="txtUserId" BorderPane.alignment="CENTER" />
            </right>
        </BorderPane>
        <BorderPane maxHeight="-Infinity" maxWidth="1.7976931348623157E308" prefHeight="50.0" prefWidth="200.0" GridPane.vgrow="ALWAYS">
            <left>
                <Text styleClass="body2" BorderPane.alignment="CENTER">Kullanici Adi</Text>
            </left>
            <right>
                <Text fx:id="txtUserName" BorderPane.alignment="CENTER" />
            </right>
        </BorderPane>
        <BorderPane maxHeight="-Infinity" prefHeight="50.0" prefWidth="200.0" GridPane.vgrow="ALWAYS">
            <left>
                <Text styleClass="body2" BorderPane.alignment="CENTER">Kullanici Soyadi</Text>
            </left>
            <right>
                <Text fx:id="txtPw" BorderPane.alignment="CENTER" />
            </right>
        </BorderPane>
        <BorderPane maxHeight="-Infinity" prefHeight="50.0" prefWidth="200.0" GridPane.vgrow="ALWAYS">
            <left>
                <Text styleClass="body2" BorderPane.alignment="CENTER">Kullanici Yetkisi</Text>
            </left>
         <right>
            <ChoiceBox fx:id="userAuth" prefWidth="150.0" BorderPane.alignment="CENTER" />
         </right>
        </BorderPane>
    </VBox>
    <FlowPane alignment="CENTER" hgap="25" prefWidth="544.0" GridPane.rowIndex="12">
        <Button onAction="#goBack">
            <graphic>
                <ImageView fitHeight="35" fitWidth="35" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../icons/arrow_left.png" />
                    </image>
                </ImageView>
            </graphic>
            Geri Don
        </Button>
        <Button fx:id="btnEdit" onAction="#update">
            <graphic>
                <ImageView fitHeight="35" fitWidth="35" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../icons/edit.png" />
                    </image>
                </ImageView>
            </graphic>
            Kullaniciyi Guncelle
        </Button>
        <Button fx:id="btnDelete" onAction="#delete">
            <graphic>
                <ImageView fitHeight="35" fitWidth="35" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../icons/delete.png" />
                    </image>
                </ImageView>
            </graphic>
            Kullaniciyi Sil
        </Button>
    </FlowPane>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
